{
  "name": "artemisa",
  "version": "1.0.3",
  "description": "React/Redux data fetching API",
  "license": "MIT",
  "author": "Javier Fernandes",
  "repository": {
    "type": "git",
    "url": "javierfernandes/artemisajs"
  },
  "scripts": {
    "build": "babel index.babel.js --out-file index.js && babel src --out-dir lib",
    "prepublish": "npm run build",
    "test": "export NODE_PATH=./src && jest --runInBand --watch",
    "test-ci": "export NODE_PATH=./src && jest --runInBand",
    "lint": "eslint src/ test/",
    "test-coverage": "yarn test-ci && codecov"
  },
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.4",
    "babel-jest": "^22.4.3",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.24.1",
    "codecov": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "jest": "^22.4.3",
    "nock": "^8.0.0",
    "nyc": "^10.2.0",
    "react-dom": "^16.3.2",
    "redux": "^4.0.0",
    "redux-mock-store": "^1.5.1",
    "redux-thunk": "^2.0.1"
  },
  "dependencies": {
    "ramda": "^0.25.0",
    "react": "^16.3.2",
    "react-redux": "^5.0.7"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "setupFiles": [
      "./__tests__/setup.js"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/(*_)(spec|test).js?(x)"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
